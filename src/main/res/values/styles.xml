<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="default_content">
        <item name="android:background">@color/background</item>
        <item name="android:textColor">@color/foreground</item>
    </style>
    <style name="banner">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">45sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="drawer_row" parent="body2">
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/drawer_row_background</item>
        <item name="android:textColor">@color/foreground</item>
        <item name="android:padding">16dp</item>
    </style>
    <style name="display1" parent="Base.TextAppearance.AppCompat.Display1">
        <item name="android:textColor">@color/foreground</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>
    <style name="title" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/foreground</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    <style name="headline" parent="Base.TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/foreground</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    <style name="subhead" parent="Base.TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@color/foreground</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>
    <style name="body1" parent="Base.TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/foreground</item>
    </style>
    <style name="body2" parent="Base.TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@color/foreground</item>
    </style>
    <style name="caption" parent="Base.TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/foreground_highlight</item>
    </style>
    <style name="panel">
        <item name="android:padding">16dp</item>
    </style>
</resources>
